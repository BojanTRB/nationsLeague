{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Game",
    "description": "A soccer game",
    "type": "object",
    "properties": {
      "Id": {
        "description": "The unique identifier for a game",
        "type": "integer"
      },
      "HomeTeam": {
        "description": "The first team which plays",
        "type": "integer"
      },
      "AwayTeam": {
        "description": "The second team which plays",
        "type": "integer"
      },
      "Value": {
        "description": "Infos to the game",
      "type": "array",
      "items": {
        "GameDay": {
            "description": "Which gameday it is (counted)",
            "type": "number",
            "exclusiveMinimum": 1
          },
          "GameDate": {
            "description": "The date of the game",
            "type": "string",
            "format": "date"
          }
      }
    }
    },
    "required": ["Id", "HomeTeam", "AwayTeam", "GameDate"]
  }
  
  